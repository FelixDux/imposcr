{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",
            "url": "http://localhost:8000/static/index.html",
            "webRoot": "${workspaceFolder}/imposc",
            "pathMappings": [
                {
                    "url": "http://localhost:8000",
                    "path": "${workspaceFolder}/imposc"
                },
            ]
        },
        {
            "name": "Python: tests",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/imposc",
            "module": "pytest",
            "env": {
                "PYTHONPATH": ".:../imposclib"
            }
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/imposc",
            "args": [
                "main:app"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": ".:../imposclib"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'imposcr'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=imposcr",
                    "--package=imposcr"
                ],
                "filter": {
                    "name": "imposcr",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'imposcr'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=imposcr",
                    "--package=imposcr"
                ],
                "filter": {
                    "name": "imposcr",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}